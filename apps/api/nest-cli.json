{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"builder": "swc",
		"plugins": [
			{
				"name": "@nestjs/swagger/plugin",
				"options": {
					"dtoFileNameSuffix": [".dto.ts"],
					"classValidatorShim": false
				}
			}
		]
	}
}
